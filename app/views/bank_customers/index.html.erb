<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.acct_no %></td>
    <td><%= customer.acct_name %></td>
    <td><%= customer.balance %></td>
    <td><%= link_to 'Show', bank_customers_path %></td>
    <td><%= link_to 'Edit', edit_bank_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

